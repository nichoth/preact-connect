{
  "name": "@nichoth/preact-connect",
  "description": "Observe view events and subscribe to state changes",
  "version": "0.2.1",
  "main": "dist/index.js",
  "directories": {
    "example": "example"
  },
  "scripts": {
    "build": "mkdir -p dist && browserify index.js --standalone preactConnect --exclude preact --exclude @nicohth/events -t [ babelify --presets [ es2015 ] ] > dist/index.js",
    "postversion": "git push && git push --tags && npm publish",
    "postinstall": "npm run build",
    "start": "budo example/index.js --live --open -- -dv"
  },
  "dependencies": {
    "@nichoth/events": "^0.7.0",
    "xtend": "^4.0.1"
  },
  "peerDependencies": {
    "preact": "^8.2.6"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^8.0.0",
    "browserify": "^16.1.1",
    "budo": "^10.0.4",
    "preact": "^8.2.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nichoth/preact-connect.git"
  },
  "author": "nichoth",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nichoth/preact-connect/issues"
  },
  "homepage": "https://github.com/nichoth/preact-connect#readme"
}
